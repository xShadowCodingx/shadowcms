html
    head 
        title=title + " | Login"
        link(rel="icon", href=image_url)
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet", href="/css/styles.css")
    
    body 
        div.row.g-0.justify-content-center.__login_container(style='background-image: url(' + background_image_url + ')')
            div.col-md-5.col-sm-8.col-10.card.__login_card
                div.__logo_container
                    img.__logo(src=image_url, alt=image_alt)
                    h2=title
                //- Need to add functionality to form
                form(action="").row.justify-content-center.g-0
                    div.mb-3.col-10
                        label(for="email").form-label Email
                        input(type="email")#EmailInput.form-control
                    div.mb-3.col-10
                        label(for="password").form-label Password
                        input(type="password")#PasswordInput.form-control 
                    div.mb-3.col-10.text-center
                        button(type="submit").btn.btn-primary Log In
                        a(href="#").btn.btn-danger Forgot Password 