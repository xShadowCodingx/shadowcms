html
    head 
        title=title + " | Login"
        link(rel="icon", href=image_url)
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet", href="/css/styles.css")
    
    body 
        div.row.g-0.justify-content-center.__login_container(style='background-image: url(' + background_image_url + ')')
            div.col-md-5.col-sm-8.col-10.card.__login_card
                div.__logo_container
                    img.__logo(src=image_url, alt=image_alt)
                    h2=title
                    if message 
                        div.row.justify-content-center 
                            if message_type == "error"
                                div.col-10.alert.alert-danger 
                                    message 
                            if message_type == "success"
                                div.col-10.alert.alert-success 
                                    message
                        
                form(action="/login" method="POST").row.justify-content-center.g-0

                    div.mb-3.col-10
                        label(for="email").form-label Email
                        input(type="email" name="Email")#Email.form-control
                    div.mb-3.col-10
                        label(for="password").form-label Password
                        input(type="password" name="Password")#Password.form-control 
                    div.mb-3.col-10.text-center
                        button(type="submit").btn.btn-primary Log In
                        a(href="#").btn.btn-danger Forgot Password