html
    head 
        title=title + " | Schema"
        link(rel="icon", href=image_url)
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet" href="/css/styles.css")

    body(style='background-image: url(' + background_image_url + ');')
        //- Navigation
        nav.navbar.navbar-expand-lg.bg-body-tertiary
            div.container
                a.navbar-brand(href="/")
                    img(src=image_url alt=image_alt height="30" width="auto")
                    p(style="display: inline; margin-left: 10px; vertical-align: middle;")=title
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#cmsNav" aria-controls="cmsNav" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                div.collapse.navbar-collapse#cmsNav
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href="/dashboard") Dashboard
                        li.nav-item
                            a.nav-link(href="#") Link
                        li.nav-item
                            a.nav-link(href="#") Link
                        li.nav-item
                            a.nav-link(href="#") Link
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle.active(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Admin
                            ul.dropdown-menu
                                li
                                    a.dropdown-item.active(href="/admin/categories" aria-current="page" style="cursor: pointer;") Categories
                                li
                                    a.dropdown-item(href="/admin/create-category" style="cursor: pointer;") Create Category
                                li
                                    a.dropdown-item(href="/admin/api-keys" style="cursor: pointer;") API Keys
                                li
                                    hr.dropdown-divider
                                li
                                    a.dropdown-item(href="/admin/users" style="cursor: pointer;") Users
                        li.nav-item
                            a.nav-link.text-danger.active(href="/login/logout") Log Out

        div.row.g-0.justify-content-center

            //- Content Container
            div.container.col-md-8.col-10.__admin_content
                div.mt-5
                    div.__admin_header_container
                    div.__admin_header
                        h1.text-center.mt-2 API Keys
                        p#counter
                        p.w-100.text-center.text-muted Create API keys to access your CMS
                        p.w-100.text-center.text-muted You can click the key to copy to clipboard
                    div.__admin_heading
                        div.row.justify-content-center.g-0
                            form.col-10#NewCategoryForm(action="/admin/api-keys" method="POST")
                                div.mb-5
                                    label.form-label.col-md-6(for="KeyName") Name for the API key 
                                    input.form-control#KeyName(type="text" name="name" required)

                                div.row.justify-content-center 
                                    button.btn.btn-success.__category_submit_button(style="width: auto; height: auto;" type="submit") Add API Key
                                
                            .row.g-0.col-10.justify-content-center#APIKeyList
                                table.table#APIKeyTable
                                    thead 
                                        th Current API Keys
                                    tbody 
                                        if api_keys.length == 0
                                            td You do not have any API keys set up yet.
                                        else 
                                            each key in api_keys 
                                                tr
                                                    td 
                                                        a(href="/admin/delete-api-key?name="+key.name)
                                                            img(src="/images/icons/trash.png" height="20" width="20" style="display: inline;")
                                                        p(style="display: inline;") #{key.name}
                                                    td(id=key.name style="cursor: pointer;" onclick=`createCopy("${key.name}")`) #{key.key}
                            

        script.
            async function createCopy(id) {
                let table = document.getElementById("APIKeyTable")
                let key = document.getElementById(id)
                await navigator.clipboard.writeText(key.innerHTML)
            }

                    