html
    head 
        title=title + " | Setup"
        link(rel="icon", href=image_url)
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet", href="/css/styles.css")
    
    body 
        div.row.g-0.justify-content-center.__login_container(style='background-image: url(' + background_image_url + ')')
            div.col-md-5.col-sm-8.col-10.card.__login_card
                div.__logo_container
                    img.__logo(src="/images/new_user.png", alt="New User Image")
                    h2 First Time User Creation
                    p This user will be the first admin
                form(action="/login/first_user" method="POST").row.justify-content-center.g-0
                    div.mb-3.col-10
                        label(for="email").form-label Email
                        input(type="email" name="Email" required)#EmailInput.form-control
                    div.mb-3.col-10
                        label(for="email").form-label Verify Email
                        input(type="email" name="VerifyEmail" required)#EmailVerificationInput.form-control
                    div.mb-3.col-10
                        label(for="password").form-label Password
                        input(type="password" name="Password" required)#PasswordInput.form-control 
                    div.mb-3.col-10
                        label(for="password").form-label Verify Password
                        input(type="password" name="VerifyPassword" required)#PasswordVerificationInput.form-control 
                    div.mb-3.col-10.text-center
                        button(type="submit").btn.btn-primary Create Account