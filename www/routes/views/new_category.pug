            function showReferences() {
                var references = document.getElementById("Reference").value;
                var referenceList = document.getElementById("ReferenceList");
                if(references == "yes") {
                    referenceList.style.display= "block";
                } else {
                    referenceList.style.display = "none";
                }
            }

