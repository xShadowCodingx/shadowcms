html
    head 
        title=title + " | Schema"
        link(rel="icon", href=image_url)
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet" href="/css/styles.css")

    body(style='background-image: url(' + background_image_url + ');')
        //- Navigation
        nav.navbar.navbar-expand-lg.bg-body-tertiary
            div.container
                a.navbar-brand(href="/")
                    img(src=image_url alt=image_alt height="30" width="auto")
                    p(style="display: inline; margin-left: 10px; vertical-align: middle;")=title
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#cmsNav" aria-controls="cmsNav" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                div.collapse.navbar-collapse#cmsNav
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href="/dashboard") Dashboard
                        li.nav-item
                            a.nav-link(href="#") Link
                        li.nav-item
                            a.nav-link(href="#") Link
                        li.nav-item
                            a.nav-link(href="#") Link
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle.active(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Admin
                            ul.dropdown-menu
                                li
                                    a.dropdown-item.active(href="/admin/schema" aria-current="page" style="cursor: pointer;") Schema
                                li
                                    a.dropdown-item(href="/admin/create-category" style="cursor: pointer;") Create Category
                                li
                                    a.dropdown-item(href="#" style="cursor: pointer;") Link
                                li
                                    a.dropdown-item(href="#" style="cursor: pointer;") Link
                                li
                                    hr.dropdown-divider
                                li
                                    a.dropdown-item(href="#" style="cursor: pointer;") Link
                        li.nav-item
                            a.nav-link.text-danger.active(href="/login/logout") Log Out

        div.row.g-0.justify-content-center

            //- Content Container
            div.container.col-md-8.col-10
                div.mt-5
                    div.__schema_header_container
                    div.card.__schema_header
                        h1.text-center.mt-2 New Category
                        p.w-100.text-center.text-muted Categories separate your content
                    div.card.__schema_heading
                        div.row.justify-content-center.g-0
                            form.col-10#NewCategoryForm(action="")
                                div.mb-3 
                                    label.form-label(for="CategoryName") Category Name 
                                    input.form-control#CategoryName(type="text" name="CategoryName")
                                
                                div.mb-3#ReferenceList
                                    label.form-label(for="ReferenceMain") Main Reference 
                                    select.form-select#ReferenceMain(aria-label="ReferenceMain")
                                        each ref, index in references
                                            if index == 0
                                                option(selected value=ref.name) #{ref.name}
                                            else 
                                                option(value=ref.name) #{ref.name}






